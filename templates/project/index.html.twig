{% extends 'base.html.twig' %}


{% block body %}
    <h1>All Project</h1>
    <a href="{{ path('project_create') }}" class="btn btn-primary"> Create Project</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Client</th>
                <th scope="col">Budget</th>
                <th scope="col">Created At</th>
                <th scope="col">Started At</th>
                <th scope="col">Finshed At</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
                <tr>
                    <th scope="row">{{ project.id }}</th>
                    <td><a href='{{ path('project_show', {'id': project.id}) }}'>{{ project.name }}</a></td>
                    <td><a href='{{ path('client_show', {'id': project.client.id}) }}'>{{ project.client.name }}</a></td>
                    <td>{{ project.budget }}</td>
                    <td>{{ project.createdAt|date("m/d/Y") }}</td>
                    <td>{{ project.startedAt|date("m/d/Y") }}</td>
                    <td>{{ project.finishedAt|date("m/d/Y") }}</td>
                    <td>
                        <a class='btn btn-warning' href='{{ path('project_edit', {'id': project.id}) }}'>Edit</a>
                        <a class='btn btn-danger' href='{{ path('project_edit', {'id': project.id}) }}'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>
        
    
{% endblock %}
